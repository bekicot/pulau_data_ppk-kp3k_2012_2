			<td style="width:109px;">
				<p>
					5</p>
			</td>
			<td style="width:109px;">
				<p>
					5</p>
			</td>
		</tr>
		<tr>
			<td style="width:39px;">
				<p>
					4</p>
			</td>
			<td style="width:109px;">
				<p>
					pH</p>
			</td>
			<td style="width:109px;">
				<p>
					&nbsp;</p>
