		<tr>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					3</p>
			</td>
			<td nowrap="nowrap" style="width:128px;height:20px;">
				<p style="text-align: justify;">
					pH</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					&nbsp;mg/L</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					8,83</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					&plusmn;</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					0,012</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					7-8,5</p>
			</td>
		</tr>
		<tr>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					4</p>
			</td>
			<td nowrap="nowrap" style="width:128px;height:20px;">
				<p style="text-align: justify;">
					Salinitas</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					&nbsp;mg/L</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					33</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					&plusmn;</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					0,404</p>
			</td>
			<td nowrap="nowrap" style="height:20px;">
				<p style="text-align: justify;">
					Alami</p>
			</td>
		</tr>
		<tr>
			<td nowrap="nowrap" style="height:22px;">
				<p style="text-align: justify;">
					5</p>
